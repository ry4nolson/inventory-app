<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Inventory.Controllers.MainController">

   <children>
      <VBox GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
         <children>
             <HBox alignment="TOP_CENTER">
                 <children>
                     <Label alignment="CENTER" contentDisplay="CENTER" text="Inventory Management System" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                         <font>
                             <Font size="28.0" />
                         </font>
                     </Label>
                 </children>
             </HBox>
            <SplitPane dividerPositions="0.5" style="-fx-box-border: transparent;" VBox.vgrow="ALWAYS">
               <items>
                  <VBox style="-fx-border-color: grey;">
                     <children>
                        <Label text="Parts">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextField promptText="Search by Part ID or Name">
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </TextField>
                        <TableView VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                        <HBox alignment="TOP_RIGHT" VBox.vgrow="NEVER">
                           <children>
                              <Button mnemonicParsing="false" text="Add">
                                 <HBox.margin>
                                    <Insets right="20.0" top="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" text="Modify">
                                 <HBox.margin>
                                    <Insets right="20.0" top="20.0" />
                                 </HBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" text="Delete">
                                 <HBox.margin>
                                    <Insets top="20.0" />
                                 </HBox.margin>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
                  <VBox style="-fx-border-color: grey;">
                     <children>
                        <Label text="Products">
                           <font>
                              <Font size="20.0" />
                           </font>
                        </Label>
                        <TextField promptText="Search by Product ID or Name" />
                        <TableView VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn prefWidth="75.0" text="C1" />
                            <TableColumn prefWidth="75.0" text="C2" />
                          </columns>
                        </TableView>
                         <HBox alignment="TOP_RIGHT" VBox.vgrow="NEVER">
                             <children>
                                 <Button mnemonicParsing="false" text="Add">
                                     <HBox.margin>
                                         <Insets right="20.0" top="20.0" />
                                     </HBox.margin>
                                 </Button>
                                 <Button mnemonicParsing="false" text="Modify">
                                     <HBox.margin>
                                         <Insets right="20.0" top="20.0" />
                                     </HBox.margin>
                                 </Button>
                                 <Button mnemonicParsing="false" text="Delete">
                                     <HBox.margin>
                                         <Insets top="20.0" />
                                     </HBox.margin>
                                 </Button>
                             </children>
                         </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </items>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </SplitPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
      
                   <Button fx:id="btnExit" alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#exit" text="EXIT">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children></HBox>
         </children>
      </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
